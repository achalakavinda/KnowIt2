<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.knowit.knowit.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/credentialPanel">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Email Address"/>

                <EditText
                    android:id="@+id/usernamelogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="tap to enter username"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Password"/>

                <EditText
                    android:id="@+id/passwordlogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="tap to enter password"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/credentialPanel"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btnprimary"
                android:textColor="#ffffff"
                android:text="Login"/>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="20dp">-->

            <!--</View>-->
            <!--<com.facebook.login.widget.LoginButton-->
            <!--android:id="@+id/loginfacebookBtn"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/btnfb"-->
            <!--android:textColor="#ffffff"-->
            <!--android:text="Login via Facebook"/>-->

        </LinearLayout>



    </RelativeLayout>

</FrameLayout>
