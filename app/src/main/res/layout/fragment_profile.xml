<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.knowit.knowit.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/headerpanelprofile"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorFontPanel"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="75sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="15sp"
                android:layout_height="75sp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profile_image"
                    android:src="@drawable/background"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="7sp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:text="Achala"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="7sp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/username"
                    android:text="Achala Kavinda"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextPrimary"/>
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/co_ordinated_layout_main_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ProgressBar
            android:id="@+id/progressBarPayment"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>


        <ListView
            android:id="@+id/profileListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:fadeScrollbars="true"
            android:clickable="true"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:paddingRight="5dp"
            android:paddingBottom="50dp"
            android:layout_below="@+id/headerpanelprofile"/>

    </RelativeLayout>
</FrameLayout>
